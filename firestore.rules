rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /players/{playerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /matches/{matchId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}